[Unit]
Description=ARL WEB Service
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/ARL_2.6.2/ARL
ExecStart=/root/miniconda3/envs/arl/bin/gunicorn -b 127.0.0.1:5013 app.main:arl_app -w 3 --access-logfile arl_web.log --access-logformat '%({x-real-ip}i)s %(l)s %(u)s %(t)s "%(r)s" %(s)s %(b)s "%(f)s" "%(a)s"'
ExecReload=/bin/kill -s HUP $MAINPID

[Install]
WantedBy=multi-user.target

